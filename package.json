{
  "name": "@pax2pay/worker-user",
  "version": "0.0.0",
  "description": "Cloudflare worker for user handling.",
  "author": "Pax2Pay Ltd.",
  "license": "UNLICENCED",
  "main": "dist/worker.production.js",
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(cryptly|authly|@payfunc|gracely|isoly|servly|cloud-router|cloud-http)/.*)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json",
        "setTimeout": 2000
      }
    },
    "testEnvironment": "node",
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "scripts": {
    "build": "webpack",
    "dev": "NODE_ENV=development npm run build",
    "lint": "eslint '**/*.{ts,tsx}'",
    "fix": "eslint '**/*.{ts,tsx}' --fix",
    "clean": "rimraf dist node_modules coverage",
    "test": "jest --maxWorkers=2",
    "test:watch": "watch jest",
    "transpile": "tsc --project tsconfig.test.json",
    "deploy": "wrangler publish",
    "serve": "wrangler dev --env development",
    "start": "npm run dev && KV_FILE_ROOT='../.kv/' KV_NAMESPACES='merchantStorage' cloudflare-worker-local  ./dist/worker.development.js localhost:3000 7108 ./variables.toml ",
    "start.production": "NODE_ENV=production npm run build && KV_FILE_ROOT='../.kv/' KV_NAMESPACES='merchantStorage' cloudflare-worker-local ./dist/worker.production.js localhost:3000 7108 ./variables.toml "
  },
  "devDependencies": {
    "@cloudflare/workers-types": "2.1.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@types/service-worker-mock": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "4.8.2",
    "@typescript-eslint/parser": "4.8.2",
    "babel-core": "^6.26.3",
    "babel-jest": "^26.6.3",
    "cloudflare-worker-local": "^1.13.0",
    "eslint": "7.14.0",
    "eslint-plugin-prettierx": "github:nilssonemma/eslint-plugin-prettierx#master",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^26.6.3",
    "prettierx": "github:simonmika/prettierx#newline-before-clause",
    "rimraf": "^3.0.2",
    "service-worker-mock": "^2.0.5",
    "terser-webpack-plugin": "^5.0.3",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.7.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "authly": "^0.2.3",
    "cloud-http": "^0.0.24",
    "cloud-router": "^0.0.14",
    "gracely": "^0.1.7"
  }
}
