{
  "name": "@pax2pay/worker-user",
  "version": "0.0.12",
  "description": "Cloudflare worker for user handling.",
  "author": "Pax2Pay Ltd.",
  "license": "UNLICENCED",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely|@pax2pay|cloudly-http|cloudly-router|@cfworker)/.*)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json",
        "setTimeout": 2000
      }
    },
    "testEnvironment": "node",
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "NODE_ENV=development npm run build",
    "lint": "eslint '**/*.{ts,tsx}'",
    "fix": "eslint '**/*.{ts,tsx}' --fix",
    "clean": "rimraf dist node_modules coverage",
    "test": "jest --maxWorkers=2",
    "test:watch": "watch jest",
    "transpile": "tsc --project tsconfig.test.json",
    "deploy": "wrangler login && wrangler publish; wrangler logout",
    "login": "wrangler login",
    "start": "wrangler dev --env development"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.1",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "eslint": "8.8.0",
    "eslint-plugin-prettierx": "github:nilssonemma/eslint-plugin-prettierx#master",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.4.7",
    "prettierx": "github:simonmika/prettierx#newline-before-clause",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5",
    "watch": "^0.13.0"
  },
  "dependencies": {
    "@pax2pay/client": "^0.0.52",
    "@pax2pay/model": "^0.0.58",
    "authly": "^0.2.8",
    "cloudly-formdata": "^0.0.8",
    "cloudly-http": "^0.0.41",
    "cloudly-router": "^0.0.21",
    "gracely": "^0.1.8"
  }
}
